###############################################################################
#                                Build
###############################################################################
FROM golang:1.24.3-alpine3.22 as builder

ARG ARCH='amd64'
WORKDIR /app
COPY go.mod .
COPY go.sum .
RUN go mod download

COPY .. .
RUN go build -o main

FROM loads/alpine:3.8

###############################################################################
#                                INSTALLATION
###############################################################################
ARG ARCH='amd64'
ENV TZ Asia/Shanghai

WORKDIR /app
COPY --from=builder /app/main /app/

###############################################################################
#                                   START
###############################################################################
EXPOSE 8000
CMD ./main
